{% block code_js %}
<script>
   $(function(){
      $('a.element').bind('click', test);
      
      function test(evt){
         var declencheur = $(evt.currentTarget); 
         
         var obj = new Object();
         
         
         obj.url     =  declencheur.attr('data-ajax');
         obj.asynch  =  true;
         obj.method  =  'get';
         obj.success  =  function (reponse){
           successAjax(reponse);
         }
         
         function successAjax(reponse){
            //alert(reponse);
            $('#ajax-response').html(reponse);
         }
         
         $.ajax(obj);
      
        
      }
});

   </script>
