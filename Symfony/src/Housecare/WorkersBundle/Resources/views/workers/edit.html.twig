{# src/Sdz/BlogBundle/Resources/views/Blog/voir.html.twig #}

{% extends "HousecareWorkersBundle::layout.html.twig" %}

{% block title %}
Lecture d'un article - {{ parent() }}
{% endblock %}

{% block body %}

<h2>New worker</h2>


<form class="form-horizontal" action="{{ path('housecare_workers_process') }}" method="POST">
   <input type="hidden"   name="id" value="{{ worker.id }}" >

      <div class="control-group">
         <label class="control-label" for="first_name">First name :</label>
         <div class="controls">
            <input type="text" id="first_name"  name="first_name" value="{{ worker.firstName}}">
         </div>
      </div>

      <div class="control-group">
         <label class="control-label" for="last_name">Last name :</label>
         <div class="controls">
            <input type="text" id="last_name" name="last_name" placeholder="Last name" value="{{ worker.lastName}}">
         </div>
      </div>

      <div class="control-group">
         <label class="control-label" for="zip_code">Zip code :</label>
         <div class="controls">
            <input type="text" id="zip_code" name="zip_code" placeholder="Zip code" value="{{ worker.zipCode}}">
         </div>
      </div>

      <div class="control-group">
         <label class="control-label" for="phone">Phone number :</label>
         <div class="controls">
            <input type="text" id="phone" name="phone" placeholder="Phone number" value="{{ worker.phone}}">
         </div>
      </div>

      <div class="control-group">
         <label class="control-label" for="email">Email :</label>
         <div class="controls">
            <input type="text" id="phone" name="email" placeholder="email" value="{{ worker.email}}">
         </div>
      </div>

      <div class="control-group">
         <label class="control-label" for="first_name">Schedule :</label>
         <div class="controls">
            <input type="text" id="min_start" name="min_start" placeholder="hour" class="input-mini">
            <input type="text" id="hour_start" name="hour_start" placeholder="minute" class="input-mini">
            until
            <input type="text" id="min_end" name="min_end" placeholder="hour" class="input-mini">
            <input type="text" id="hour_end" name="hour_end" placeholder="minute" class="input-mini">
         </div>
      </div>

      <div class="control-group">
         <label class="control-label" for="order">Order :</label>
         <div class="controls">
            <input type="text" id="order" name="order" placeholder="Order" value="{{ worker.order}}">
         </div>
      </div>


      <div class="control-group">

         <label class="control-label" for="note">Note :</label>
         <div class="controls">
            <textarea rows="3" name="note" id="note">{{ worker.note}}</textarea>

         </div>
      </div>

      <div class="control-group">

         <label class="control-label" for="order">Statut :</label>
         <div class="controls">
            <label class="radio">
               <input type="radio" name="statut" id="optionsRadios1" value="1" {% if worker.statut == 1 %} checked {% endif %} >
               free
            </label>
            <label class="radio">
               <input type="radio" name="statut" id="optionsRadios2" value="2" {% if worker.statut == 2 %} checked {% endif %} >
               busy
            </label>
            <label class="radio">
               <input type="radio" name="statut" id="optionsRadios2" value="0" {% if worker.statut == 0 %} checked {% endif %}>
               done
            </label>

         </div>
      </div>
      <div class="form-actions">
         <button type="submit" class="btn btn-primary">Save changes</button>
         <button type="button" class="btn">Cancel</button>
      </div>
   </form>


{% endblock %}